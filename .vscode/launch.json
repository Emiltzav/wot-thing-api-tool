{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: FastAPI with Uvicorn",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/Backend/main.py",  // Path to your FastAPI app
        "args": [
          "uvicorn",
          "main:app",
          "--host",
          "0.0.0.0",
          "--port",
          "8080"
        ],
        "console": "integratedTerminal",
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        }
      }
    ]
  }